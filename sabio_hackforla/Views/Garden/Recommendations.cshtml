@{
    ViewBag.Title = "Recommendations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="left-align">Recommendations</h2>

<div class="container" id="RecomControllerElement" ng-controller="recomController as recommendations">
    <div class="container page-content">
        <div class="row">
            <div class="grid-example col s12 m6">
                <span class="flow-text">I am full-width on mobile (col s12 m6)</span>
            </div>
        </div>
        <div class="row">
            <div class="col s6 m3">
                <div class="card">
                    <div class="card-image">
                        <img src="http://img2-2.timeinc.net/toh/i/g/0706_annuals/drought-resistant-01.jpg" />
                        <span class=" card-title">Card Title</span>
                    </div>
                    <div class="card-content">
                        <p>
                            I am a drought-resistant plant.
                        </p>
                    </div>
                    <div class="card-action">
                        <a href="#">This is a link</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Recommendation.js"></script>






